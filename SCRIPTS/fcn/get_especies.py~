
species_select = input("¿Qué especies quieres seleccionar?:\n"
                             "[H2, CO, H2O, CO2, CH4] (basic)\n"
                             "[H2, CO, H2O, CO2, CH4, Na, K, NH3] (avanzado)\n"
                             "Introducir las especies manualmente (manual)\n"
                             )

def get_especies():
    if species_select == 'manual':
        species_input = input("Escribe los elementos que quieres estudiar (ejemplo: CH4, H2O): ")
        
        # Divide la entrada por comas y elimina espacios innecesarios
        species_labels = [species.strip() for species in species_input.split(',')]

        return species_labels
        
    elif species_select == 'basic':
            species_labels = ['H2', 'CO', 'H2O', 'CO2', 'CH4']
            
            return species_labels

    elif species_select == 'avanzado':
            species_labels = ['H2', 'CO', 'H2O', 'CO2', 'CH4', 'Na', 'K', 'NH3']

            return species_labels
        
    else:
            raise ValueError(f'Elección de especies no reconocida : {species_select}')

