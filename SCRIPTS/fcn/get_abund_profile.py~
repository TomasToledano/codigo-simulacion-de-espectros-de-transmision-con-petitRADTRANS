from config import plt

def get_abund_profile(params_basic, mass_fractions):
    for species, fraction in mass_fractions.items():  
        plt.plot(fraction, params_basic.pressures_bar, label=f'{species}')  
    plt.gca().invert_yaxis()
    plt.xlabel('Xmass')
    plt.ylabel('P (bar)')
    plt.yscale('log')
    plt.xscale('log')
    plt.legend() 
    plt.show()
